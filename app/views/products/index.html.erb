<h1><%= I18n.t 'products.index.title' %></h1>

<table>
  <tr>
    <td><%= I18n.t 'products.index.table.headers.name' %></td>
    <td><%= I18n.t 'products.index.table.headers.amount' %></td>
    <td><%= I18n.t 'products.index.table.headers.unit_price' %></td>
    <td></td>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.amount %></td>
      <td><%= product.unit_price %></td>
      <td>
        <%= link_to 'Detalhes', product_path(product) %>
        <%= link_to 'Editar', edit_product_path(product) %>
        <%= link_to 'Excluir', product_path(product),
          method: :delete, data: { confirm: 'VocÃª esta certo disso?' } %>
      </td>
    </tr>
  <% end %>
</table>

