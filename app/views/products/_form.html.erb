<h1><%= @title %></h1>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, disabled: @product.persisted? %> <br>

  <%= f.label :amount %>
  <%= f.text_field :amount %> <br>

  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %> <br>

  <%= f.label :description %>
  <%= f.text_area :description %> <br>

  <%= f.label :technical_details %>
  <%= f.text_area :technical_details %> <br>

  <%= f.submit 'Salvar' %>
<% end %>

<%= link_to 'Voltar',
  @product.persisted? ? product_path(@product) : products_path %>
